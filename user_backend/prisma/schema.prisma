generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Essence {
  id            String           @id @default(cuid())
  name          String          // e.g., "Childhood Wonder", "First Love", "Autumn Melancholy"
  description   String
  energySignature String        // The unique vibrational pattern of this essence
  manifestation Manifestation[]
  etherealRating Float          // How transcendent the experience is (0-10)
  duration      DurationType    @default(EPHEMERAL)
  origin        String?         // e.g., "Collective Unconscious", "Personal Memories"
  resonance     Float          // How strongly it resonates with human consciousness
  sideEffects   String[]       // e.g., ["Temporary Euphoria", "Heightened Awareness"]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @default(now())
  orders        Order[]
  cart          Cart?          @relation(fields: [cartId], references: [id])
  cartId        String?
}

model Manifestation {
  id            String    @id @default(cuid())
  intensity     Float     // Strength of the experience (0-10)
  clarity       Float     // How clear the experience manifests
  frequency     String    // Vibrational frequency of the experience
  price         Float
  essence       Essence   @relation(fields: [essenceId], references: [id])
  essenceId     String
  availability  Boolean   @default(true)  // Some experiences may need recharging
}

model Cart {
  id        String     @id @default(cuid())
  user      User       @relation(fields: [userId], references: [id])
  userId    String     @unique
  items     Essence[]
}

model User {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  address   String
  orders    Order[]
  cart      Cart?
  cartId    String?
  // Added some mystical attributes to regular users
  vibration Float     @default(1.0)
  karmaPoints Int     @default(0)
  awarenessLevel Int  @default(1)
}

model Order {
  id              String    @id @default(cuid())
  user            User      @relation(fields: [userId], references: [id])
  userId          String
  totalPrice      Float
  shippingAddress String    // Now more like a "manifestation location"
  paymentStatus   String    @default("pending")
  orderStatus     String    @default("pending")
  items           Essence[]
}

enum DurationType {
  EPHEMERAL      // Lasts a moment
  TEMPORAL       // Lasts a day
  PERSISTENT     // Lasts a week
  ETERNAL        // Permanently changes the experiencer
}




